<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.member">
	<resultMap id="memResult" type="memberVO">
		<result property="tid" column="tid" />
		<result property="id" column="id" />
        <result property="pwd" column="pwd" />
        <result property="pwdRe" column="pwdRe" />
        <result property="name" column="name" />
        <result property="nickname" column="nickname" />
        <result property="birth" column="birth" />
        <result property="gender" column="gender" />
        <result property="phone" column="phone" />
        <result property="creationDate" column="creationDate" />
        <result property="modDate" column="modDate" />
	</resultMap> 
	
	 <!-- 모든 멤버 리스트 --> 
  	<select id="selectAllMemberList" resultMap="memResult">
      <![CDATA[
         select * from userTBL order by tid desc	 	
      ]]>
	</select>
	
   <!--회원가입-->
   <insert id="insertMember"  parameterType="memberVO">
		<![CDATA[
			 INSERT INTO userTBL
    			(id, pwd, pwdRe, name, nickname, birth, gender, phone)
			 VALUES
			    (#{id}, #{pwd}, #{pwdRe}, #{name}, #{nickname}, #{birth}, #{gender}, #{phone})
		]]>      
   </insert>

   <!-- 탈회하기 -->
   <delete id="deleteMember"  parameterType="Integer">
	<![CDATA[
	   delete from  userTBL
	   where
	   tid=#{tid}
	]]>      
   </delete>
   
   <!-- 멤버 찾기 -->
   <select id="selectMemberByTid" resultType="memberVO"  parameterType="Integer" >
      <![CDATA[
         select * from userTBL
         where
         tid=#{tid}			
      ]]>
   </select>
   
   <!--개인정보 업데이트 -->
   <update id="updateMember"  parameterType="memberVO">
     <![CDATA[
	     update userTBL
	     set id=#{id}, birth=#{birth}, gender=#{gender}, phone=#{phone}
	     where
	     tid=#{tid}
      ]]>      
   </update> 
   
	<!-- 로그인 -->
   <select id="loginById"  resultType="memberVO"   parameterType="memberVO" >
	<![CDATA[
		select * from userTBL	
		where id=#{id, jdbcType=VARCHAR} and pwd=#{pwd, jdbcType=VARCHAR}		
	]]>
  </select>
  
   
